<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
    <head>
        <meta charset="UTF-8">
        <title>{{title}}</title>
        <link rel="stylesheet" href="css/style.css" type="text/css">
    </head>
    <body>
        <div id="background">
            <div id="page">
                {{> header}}
                <div id="contents">
                    <div id="adbox">
                        <image src="images/{{mainPage.hero.image}}" alt="{{mainPage.hero.alt}}">
                        <h1>{{mainPage.hero.title}}</h1>
                        <p>
                            {{{mainPage.content}}}
                        </p>
                    </div>
                    <div id="main">
                        <div class="box">
                            <div>
                                <div>
                                    <h3>Latest Blog</h3>
                                    <ul>
                                        {{#each mainPage.blogs}}
                                        <li>
                                            <h4><a href="{{this.link}}">{{this.title}}</a></h4>
                                            <span>{{this.date}}</span>
                                            <p>
                                                {{{this.description}}}
                                            </p>
                                        </li>
                                        {{/each}}
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div id="testimonials" class="box">
                            <div>
                                <div>
                                    <h3>Testimonials</h3>
                                    {{#each mainPage.testimonials}}
                                    <p>
                                        {{this.quote}} <span>- <a href="{{this.link}}">{{this.author}}</a></span>
                                    </p>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="sidebar">
                        {{#each mainPage.sidebar}}
                        <div class="section">
                            <a href="{{this.link}}"><image src="images/{{this.image}}" alt="{{this.alt}}"></a>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            {{> footer}}
        </div>
    </body>
</html>